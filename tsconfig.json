{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "strict": true,
    "noEmit": true,
    "types": ["stripe-event-types"]
  },
  "include": ["app", "lib"]
}
